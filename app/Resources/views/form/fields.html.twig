{% use "bootstrap_3_layout.html.twig" %}

{# Labels #}

{%- block form_label -%}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        {% set label = label|trans %}
        {% if not required %}
            {% set label = label ~ ' ' ~ 'frontend.form.optional'|trans %}
        {% endif %}
        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label }}</label>
    {%- endif -%}
{%- endblock form_label -%}


{# Errors #}

{% block form_errors -%}
    {% if errors|length > 0 -%}
        {% if form is not rootform %}<span class="bmd-error">{% else %}<div class="alert alert-danger"><div class="container">{% endif %}
        <ul class="list-unstyled">
        {%- for error in errors -%}
            <li><i class="material-icons">error_outline</i> {{ error.message|trans }}</li>
        {%- endfor -%}
    </ul>
        {% if form is not rootform %}</span>{% else %}</div></div>{% endif %}
    {%- endif %}
{%- endblock form_errors %}
