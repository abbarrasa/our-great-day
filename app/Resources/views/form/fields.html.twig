{% use "bootstrap_3_layout.html.twig" %}

{# Errors #}

{% block form_errors -%}
    {% if errors|length > 0 -%}
        {% if form is not rootform %}<span class="bmd-error">{% else %}<div class="alert alert-danger"><div class="container">{% endif %}
        <ul class="list-unstyled">
        {%- for error in errors -%}
            <li><i class="material-icons">error_outline</i> {{ error.message|trans }}</li>
        {%- endfor -%}
    </ul>
        {% if form is not rootform %}</span>{% else %}</div></div>{% endif %}
    {%- endif %}
{%- endblock form_errors %}
