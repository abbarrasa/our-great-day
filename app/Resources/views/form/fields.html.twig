{% use "form_div_layout.html.twig" %}

{# File widget #}
{% block file_widget %}
    {% spaceless %}

        {{ block('form_widget') }}
        {% if image_url is not null %}
            <img src="{{ image_url|data_uri }}" class="img-thumbnail" alt="image_photo"/>
        {% endif %}

    {% endspaceless %}
{% endblock %}

{# Errors #}
{% block form_errors -%}
    {% if errors|length > 0 -%}
        {% if form is not rootform %}
            <span class="bmd-error"><ul class="list-unstyled">
            {%- for error in errors -%}
                <li><i class="material-icons">error_outline</i> {{ error.message|trans }}</li>
            {%- endfor -%}
            </ul></span>
        {% else %}
            <div class="alert alert-danger"><div class="container">
            {%- for error in errors -%}
                <div class="alert-icon">
                    <i class="material-icons">error_outline</i>
                </div><strong>{{ 'frontend.error'|trans({}, 'AppBundle') }}</strong> {{ error.message|trans({}, 'validators') }}
            {%- endfor -%}
            </div></div>
        {% endif %}
    {%- endif %}
{%- endblock form_errors %}
