{% if pagination|length > 0 %}
    <div class="col-12">
        {% set column0 = [] %}
        {% set column1 = [] %}
        {% set column2 = [] %}
        {% for row in pagination|batch(3) %}
            {% for position, entry in row %}
                {% set key = position % 3 %}
                {% if key == 0 %}
                    {% set column0 = column0|merge([entry]) %}
                {% elseif key == 1 %}
                    {% set column1 = column1|merge([entry]) %}
                {% elseif key == 2 %}
                    {% set column2 = column2|merge([entry]) %}
                {% endif %}
            {% endfor %}
        {% endfor %}
        {% set columns = [column0, column1, column2] %}
        {% set styles = ['primary', 'info', 'success', 'warning', 'danger', 'rose'] %}
        <div class="row">
            {% for column in columns %}
                <div class="col-xl-4 col-lg-4 col-md-4 col-xs-12">
                {% for greeting in column %}
                    {% set style = styles[(greeting.createdAt|date('U')) % (styles|length)] %}
                    <div class="card card-sr bg-{{ style }}">
                        <div class="card-body">
                            <div class="card-category text-right">
                                <i class="material-icons">schedule</i> {{ greeting.publishedAt|elapsed_time }}
                            </div>
                            <h4 class="card-title justify-content-center">{{ greeting.message }}</h4>
                        </div>
                        <div class="card-footer">
                            <div class="author">
                                {% image '../app/Resources/public/images/user-default.jpg' %}
                                <img src="{{ asset_url }}" alt="{{ greeting.name }}" class="avatar img-raised">
                                {% endimage %}
                                <span>{{ greeting.name }}</span>
                            </div>
                            <div class="stats ml-auto">
                                <a href="{{ path('greeting_like', {'id': greeting.id, 'page': app.request.attributes.get('page')}) }}" class="badge badge-danger" title="{{'frontend.guestbook.likes.tooltip'|trans}}" data-toggle="tooltip">
                                    <i class="fa fa-heart"></i>  {{ greeting.likes }}
                                </a>
                                <a href="{{ path('greeting_comments', {'id': greeting.id}) }}" class="badge badge-secondary badge-comment" title="{{'frontend.guestbook.comments.tooltip'|trans}}" data-toggle="tooltip">
                                    <i class="fa fa-comment"></i>  {{ greeting.comments|length }}
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="col-8 ml-auto sr">
        {{ knp_pagination_render(pagination, 'partials/knp_pagination.html.twig') }}
    </div>
{% else %}
    <div class="alert alert-info">
        <div class="container">
            <div class="alert-icon">
                <i class="material-icons">info_outline</i>
            </div>
            <b>{{ 'frontend.info'|trans }}</b>: {{ 'frontend.guestbook.no_greetings'|trans }}
        </div>
    </div>
{% endif %}
