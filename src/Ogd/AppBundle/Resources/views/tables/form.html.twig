<div class="card card-raised">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-12 text-center">
                <h4 class="description">Introduce tu nombre y/o apellidos para buscarte en la mesa de qué tipo de música te ha tocado</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group bmd-form-group{% if not form.name.vars.valid %} has-danger{% endif %}">
                    {{ form_label(form.name, form.name, {'label_attr': {'class': 'bmd-label-floating'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                    {% if not form.name.vars.valid %}
                        <span class="material-icons form-control-feedback">clear</span>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group bmd-form-group">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                </div>
			</div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group bmd-form-group">
                    <a href="{{ path('tables') }}" class="btn btn-danger btn-block">Limpiar</a>
                </div>
            </div>
		</div>

		{{ form_end(form) }}

	</div>
</div>