<div class="col-md-10 ml-auto mr-auto">
	<p class="description">Búscate en la mesa de qué tipo de música te ha tocado</p>
	<div class="card card-plain card-form-horizontal">
		<div class="card-body ">
			{{ form_start(form) }}
			{{ form_errors(form) }}

                        <div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group bmd-form-group{% if not form.name.vars.valid %} has-danger{% endif %}">
						{{ form_label(form.name, form.name, {'label_attr': {'class': 'bmd-label-floating'}}) }}
						{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(form.name) }}
						{% if not form.name.vars.valid %}
							<span class="material-icons form-control-feedback">clear</span>
						{% endif %}
                                        </div>
                                </div>
                                <div class="col-md-6 col-sm-12">
	        			{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
					<a href="{{ path('tables) }} class="btn btn-danger btn-block">Limpiar</a>
	                        </div>
                        </div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
