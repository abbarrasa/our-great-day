{% extends '@App/base.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'bundles/app/css/table-planner.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}


{% block title %}{{ 'frontend.title'|trans }} - Mesas{% endblock %}

{% block main %}
    <div id="first-section" class="section section-basic">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ml-auto mr-auto sr">
                    <div class="section-description text-center sr">
                        <h2 class="title">Nuestro gran <em>Banquete</em></h2>
			<p class="description">Revisa la planificación de nuestras mesas para encontrar dónde te vas a sentar</p>
                    </div>
		</div>
		
		<div class="col-12 ml-auto mr-auto">
		{% if pagination|length > 0 %}
			{% for table in pagination %}
				{{ table|render_table }}
			{% endfor %}
                      <div class="row">
                      	 <div class="col-8 ml-auto sr">
                             {{ knp_pagination_render(pagination, '@App/partials/knp_pagination.html.twig') }}
                         </div>
		      </div>			
                {% else %}
			<div class="alert alert-info">
                            <div class="container">
                                <div class="alert-icon">
                                    <i class="material-icons">info_outline</i>
                                </div>
                                <b>{{ 'frontend.info'|trans }}</b>: No hay mesas planificadas
                            </div>
                        </div>
                {% endif %}
		</div>
            </div>
        </div>
    </div>
{% endblock %}
