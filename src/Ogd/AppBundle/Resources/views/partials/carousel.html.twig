<!-- Carousel Card -->
<div class="card card-raised card-carousel">
    <div id="{{ id }}" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#{{ id }}" data-slide-to="0" class="active"></li>
            <li data-target="#{{ id }}" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                {% image 'bundles/app/images/bodorriol.jpg' %}
                <img class="d-block w-100" src="{{ asset_url }}" alt="First slide">
                {% endimage %}
                <div class="carousel-caption d-none d-md-block">
                    <h4>¡Reserva tu bodorriol! Confirma tu asistencia</h4>
                </div>
            </div>
            <div class="carousel-item">
                {% image 'bundles/app/images/photocall.jpg' %}
                <img class="d-block w-100" src="{{ asset_url }}" alt="Second slide">
                {% endimage %}
                <div class="carousel-caption d-none d-md-block">
                    <h4>¡Habemus PhotoCall!</h4>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#{{ id }}" role="button" data-slide="prev">
            <i class="material-icons">keyboard_arrow_left</i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#{{ id }}" role="button" data-slide="next">
            <i class="material-icons">keyboard_arrow_right</i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- End Carousel Card -->
