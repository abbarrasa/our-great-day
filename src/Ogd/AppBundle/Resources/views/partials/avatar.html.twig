{% set classes = classes|default([])|merge(['img-raised']) %}
{% if user %}
    {% if user.picture is not null %}
        {% set filepath = user_directory ~ '/' ~ user.picture %}
        <img src="{{  filepath|data_uri }}" alt="{{ user.username }}" class="{{ classes|join(' ') }}">
    {% else %}
        {% image 'bundles/app/images/user-default.jpg' %}
        <img src="{{ asset_url }}" alt="{{ user.username }}" class="{{ classes|join(' ') }}">
        {% endimage %}
    {% endif %}
{% else %}
    {% image 'bundles/app/images/user-default.jpg' %}
    <img src="{{ asset_url }}" alt="{{ alt|default('') }}" class="{{ classes|join(' ') }}">
    {% endimage %}
{% endif %}
