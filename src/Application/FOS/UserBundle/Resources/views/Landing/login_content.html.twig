{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">
        <div class="container">
            <div class="alert-icon">
                <i class="material-icons">error_outline</i>
            </div>
            <strong>{{ 'frontend.error'|trans({}, 'AppBundle') }}</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    </div>
{% endif %}

<form action="{{ path("fos_user_landing") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input type="hidden" name="_target_path" value="guest_set_user" />
    <div class="col-md-12 form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">account_circle</i>
                </span>
            </div>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" />
        </div>
    </div>

    <div class="col-md-12 form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">lock_outline</i>
                </span>
            </div>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" />
        </div>
    </div>

    <div class="col-md-12 form-group bmd-form-group">
        <div class="input-group">
            <div class="form-check">
                <label class="form-check-label">
                    <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input" value="on"> {{ 'security.login.remember_me'|trans }}
                    <span class="form-check-sign">
                        <span class="check"></span>
                    </span>
                </label>
            </div>
        </div>
    </div>

    <div class="col-md-12 form-group bmd-form-group">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary pull-right" />
    </div>
</form>