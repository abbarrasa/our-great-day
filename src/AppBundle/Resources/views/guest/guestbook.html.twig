{% extends 'base.html.twig' %}

{% block title %}Our Great Day! - Guestbook{% endblock %}

{% block main %}
<div class="section section-basic">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2 class="title text-center">Our Great <em>Guestbook</em></h2>
            </div>
            
            <div class="col-md-12">
                {{ include('AppBundle:guest/partials:card-list.html.twig', {'pagination': pagination}) }}
            </div>
            
            {#{{ flash_messages() }}#}
            <div class="col-md-8 col-md-offset-2">
                <div class="card card-raised">
                    <div class="content">
                        {{ form_start(form) }}
                        <div class="col-md-12">
                            <div class="form-group label-floating">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                <span class="material-icons form-control-feedback">clear</span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group label-floating">
                                {{ form_label(form.comment) }}
                                {{ form_widget(form.comment) }}
                                <span class="material-icons form-control-feedback">clear</span>
                            </div>
                        </div>
                        
                        <div class="pull-right">
                            <div class="col-md-12">
                                {{ form_widget(form.submit) }}
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>                        
        </div>
    </div>
</div>
{% endblock %}
